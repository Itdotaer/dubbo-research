<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="testA" class="circle.TestA" scope="singleton">
        <constructor-arg ref="testB" />
    </bean>

    <bean id="testB" class="circle.TestB" scope="singleton">
        <constructor-arg ref="testC" />
    </bean>

    <bean id="testC" class="circle.TestC" scope="singleton">
        <constructor-arg ref="testA" />
    </bean>
</beans>
